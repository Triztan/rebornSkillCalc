@import 'bootstrap.css'

$grey1 = #8D8D8D
$grey2 = #E9E9E9

$optBackground = #ADADAD

$grey = #8D8D8D
$celeste = #DEDEDE

$skillH = 60px
$skillW = 84px
body
	font-size 16px
	background-color #C8D6E1
	background-image url('http://rebornluna2.com/landing/img/intro-bg.jpg')

#container
	height 100%

ul
	list-style none
.ulToShow
	overflow auto
	font-size 12px
	text-align center
	tr
		th
			margin-right 5px
			padding-right 5px
		td
			margin-right 5px

.RebornSc
	margin 0 auto
	width $skillW*11
	min-height 600px
	border 2px solid $grey
	border-radius 10px
	background-color #C8D6E1
	background-image url('../img/skybackground.jpg')
	background-repeat repeat-x
	background-size 100% 100%
	
	.xtraInfo
		height 30px
		width 100%
		
		font-size 16px
		color white
		background: $celeste; /* For browsers that do not support gradients */
		background: -webkit-radial-gradient($celeste, $grey); /* Safari 5.1 to 6.0 */
		background: -o-radial-gradient($celeste, $grey); /* For Opera 11.6 to 12.0 */
		background: -moz-radial-gradient($celeste, $grey); /* For Firefox 3.6 to 15 */
		background: radial-gradient($celeste, $grey); /* Standard syntax */
		border 1px solid $grey
		line-height 16px
		text-align center
		display flex;
		align-items center
		justify-content center
		ul
			list-style none
			margin 0
			padding 0
			display flex
			justify-content space-between
			align-content space-around
			min-width 760px
			li
				display inline

	.tableMenu
		//Centra el contenido margin 0 auto
		//margin 0 auto
		margin 0 auto
		width 760px
		height 40px
		border-radius 10px
		line-height 40px
		display flex
		flex-direction row
		justify-content space-between
		
		select
			border-radius 5px
			width 100px
			color white
			background: $celeste; /* For browsers that do not support gradients */
			background: -webkit-linear-gradient($celeste, $grey); /* For Safari 5.1 to 6.0 */
			background: -o-linear-gradient($celeste, $grey); /* For Opera 11.1 to 12.0 */
			background: -moz-linear-gradient($celeste, $grey); /* For Firefox 3.6 to 15 */
			background: linear-gradient($celeste, $grey); /* Standard syntax */
			appearance none
			-moz-appearance none
			-webkit-appearance none
			text-align center
			option
				background: $optBackground;
	.table
		width $skillW*11
		height 100%
		border-top 4px solid $grey
		display flex
		flex-direction row
		justify-content space-between
		

		&-skill-pasive
			height 100%
			width 33.33%
		&-skill
			height 100%
			width 66.67%
			

.title
	height 30px
	line-height 30px
	text-align center
	border-bottom 3px solid $grey
	border-left 1px solid $grey
	border-right 1px solid $grey
	background: $celeste; /* For browsers that do not support gradients */
	background: -webkit-linear-gradient($celeste, $grey); /* For Safari 5.1 to 6.0 */
	background: -o-linear-gradient($celeste, $grey); /* For Opera 11.1 to 12.0 */
	background: -moz-linear-gradient($celeste, $grey); /* For Firefox 3.6 to 15 */
	background: linear-gradient($celeste, $grey); /* Standard syntax */
	
.content
	width 100%
	height 100%
	display flex
	flex-wrap wrap
	align-content flex-start
		
	.skill
		margin-left 20px
		margin-right 20px
		margin-bottom 15px
		margin-top 15px
		&-name
			font-size 10px
			text-align center
			position absolute
			word-wrap break-word
			margin auto
		&-info
			height $skillH
			width 50px
			display flex
			flex-direction row
			align-items center
			margin 2px 7px
			justify-content center
			background-color black
			border-radius 10px 0 0 6px
			padding-right 2px
			
			.skill-get
				width 7px
				height $skillH
				display flex
				flex-direction column
				align-items center
				justify-content space-around
				div
					height 8px
					width 5px
					border 1 solid black
					background-color white
				div.active
					background-color green
					border-radius 1px
				
			.skill-content
				width 60px
				height 98px
				padding 4px 0px 4px 4px
				.progress
					width 100%
					height 6px
					border 1px solid black
					border-radius 3px
					div
						height 6px
						background-color green
						border-radius 3px 0 0 3px
				.text
					font-size 12px
					text-align center
					color black
				.skill-image
					display flex
					width 40px
					height 39px
					order 1
					border-radius 10px 10px 10px 10px
				
				.calls
					text-align center
					display flex
					flex-direction row
					justify-content space-between
					order 2
					
					
					.skill-btn-sum
						border 1px solid blue
						color white
						background-color blue
						border-radius 5px
						font-size 16px
						line-height 16px
						height 16px
						width 50%
						text-decoration none
						cursor pointer
					.skill-btn-sub
						border 1px solid red
						color white
						background-color red
						border-radius 5px
						font-size 16px
						line-height 16px
						height 16px
						width 50%
						text-decoration none
						cursor pointer